datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  email         String         @unique
  name          String
  password      String
  role          String         @default("STUDENT") // STUDENT, STAFF, ADMIN
  
  // Relationships
  tickets       Ticket[]       @relation("StudentTickets")
  assignedTasks Ticket[]       @relation("StaffTasks")
  chatMessages  ChatMessage[] 
  notifications Notification[] // Added link for in-app alerts
  
  createdAt     DateTime       @default(now())
}

model Ticket {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  category      String   @default("General")
  status        String   @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED
  
  attachmentUrl String?
  remarks       String?
  
  // Relations
  student       User     @relation("StudentTickets", fields: [studentId], references: [id], onDelete: Cascade)
  studentId     String   @db.ObjectId
  
  assignedTo    User?    @relation("StaffTasks", fields: [assignedToId], references: [id])
  assignedToId  String?  @db.ObjectId

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([category])
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  role      String   // "user" or "assistant"
  content   String
  createdAt DateTime @default(now())

  // Link to User
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId

  @@index([userId])
}

// NEW: Notification model for real-time alerts
model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Link to User (The recipient)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId

  @@index([userId])
  @@index([isRead])
}
